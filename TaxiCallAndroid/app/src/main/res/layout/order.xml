<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".order">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/message_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/numberd"
                android:padding="10dp"
                android:gravity="center" />


            <TextView
                android:layout_below="@+id/numberd"
                android:text="checking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/colorView"
                android:padding="10dp" />

        </RelativeLayout>
    </RelativeLayout>

    <include
        android:id="@+id/f_number"
        layout="@layout/f_number"
        android:layout_width="match_parent"
        android:layout_height="80dp" />


    <include
        android:id="@+id/f_setstart"
        android:layout_below="@+id/f_number"
        layout="@layout/f_setstart"
        android:layout_width="match_parent"
        android:layout_height="80dp" />


    <include
        android:id="@+id/f_destination"
        android:layout_below="@+id/f_setstart"

        layout="@layout/f_destination"
        android:layout_width="match_parent"
        android:layout_height="80dp" />


    <Button

        android:id="@+id/call_type"
        android:layout_below="@+id/f_destination"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="@string/call_type"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_now"
        android:id="@+id/button_trigger"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
