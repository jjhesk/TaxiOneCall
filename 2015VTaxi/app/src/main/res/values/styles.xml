<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="CleanView" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="swipebarTextView" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:gravity">center_vertical</item>
        <item name="android:tag">hover</item>
    </style>

    <style name="Item" parent="">
        <item name="android:textColor">@color/material_blue_grey_900</item>
    </style>

    <style name="Item.Small">
        <item name="android:layout_width">@dimen/item_circle_size_small</item>
        <item name="android:layout_height">@dimen/item_circle_size_small</item>
        <item name="android:textSize">@dimen/item_font_size_small</item>
    </style>

    <style name="Item.Medium">
        <item name="android:layout_width">@dimen/item_circle_size_medium</item>
        <item name="android:layout_height">@dimen/item_circle_size_medium</item>
        <item name="android:textSize">@dimen/item_font_size_medium</item>
    </style>

    <style name="Item.Large">
        <item name="android:layout_width">@dimen/item_circle_size_large</item>
        <item name="android:layout_height">@dimen/item_circle_size_large</item>
        <item name="android:textSize">@dimen/item_font_size_large</item>
    </style>

    <style name="Item.Tumblr">
        <item name="android:layout_width">@dimen/item_circle_size_tumblr</item>
        <item name="android:layout_height">@dimen/item_circle_size_tumblr</item>
        <item name="android:textSize">@dimen/item_font_size_tumblr</item>
        <item name="android:textColor">@color/material_pink_500</item>
    </style>

    <style name="Item.Path" parent="rippleButton">
        <item name="android:layout_width">@dimen/item_circle_size_tumblr</item>
        <item name="android:layout_height">@dimen/item_circle_size_tumblr</item>
        <item name="android:textSize">@dimen/item_font_size_path</item>
        <item name="android:background">@drawable/path_white_oval</item>
    </style>

    <style name="imagebuttonStyle" parent="Item.Path">
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">1dp</item>
        <item name="android:layout_width">@dimen/item_circle_size_tumblr</item>
        <item name="android:layout_height">@dimen/item_circle_size_tumblr</item>
    </style>

    <style name="Item.Path.green" parent="imagebuttonStyle">
        <item name="android:background">@drawable/path_oval_greenl</item>
    </style>

    <style name="Item.Path.red" parent="imagebuttonStyle">
        <item name="android:background">@drawable/path_oval_red</item>
    </style>

    <style name="Item.Path.yellow" parent="imagebuttonStyle">
        <item name="android:background">@drawable/path_oval_yel</item>
    </style>

    <style name="rippleButton" parent="android:style/Widget.Holo.ActionButton">
        <item name="paddingStart">5dp</item>
        <item name="paddingEnd">5dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@mipmap/ic_action_find</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="indication_icon">
        <item name="android:tint">@color/green_nt</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="start_location" parent="indication_icon">
        <item name="android:src">@drawable/loc_flag</item>
    </style>

    <style name="to_location" parent="indication_icon">
        <item name="android:src">@drawable/loc_pass</item>
    </style>
</resources>
