<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextDriverPlaces">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/username5</item>
        <item name="android:paddingLeft">@dimen/spacing</item>
        <item name="android:paddingRight">@dimen/spacing</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="TextDriverPlaces.from" parent="TextViewOrderSpan">
        <item name="android:textColor">@color/username5</item>
    </style>

    <style name="TextDriverPlaces.to" parent="TextViewOrderSpan">
        <item name="android:textColor">@color/username2</item>
    </style>

    <style name="LoginButton" xmlns="http://schemas.android.com/apk/res-auto">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">Connect</item>
        <item name="android:textSize">15sp</item>
        <item name="pb_colorNormal">@color/teal_400</item>
        <item name="pb_colorPressed">@color/teal_300</item>
        <item name="pb_colorComplete">@color/green_900</item>
        <item name="pb_textComplete">success</item>
        <item name="pb_textProgress">@string/waitprocess</item>
        <item name="pb_textError">@string/errorloading</item>
        <item name="pb_colorError">@color/red_200</item>
        <!--<item name="pb_disabled">@color/dark</item>-->
        <item name="android:layout_marginLeft">@dimen/marginp</item>
        <item name="android:layout_marginRight">@dimen/marginp</item>
        <item name="android:layout_marginTop">@dimen/marginp</item>
    </style>

    <style name="TextViewOrderSpan">
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.45</item>
        <item name="android:maxWidth">120dp</item>
        <item name="android:textSize">25sp</item>
        <item name="android:lines">1</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:text">this is just hte demo txt running in the view</item>
        <item name="android:state_selected">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>
</resources>
