<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextDriverPlaces">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/username5</item>
        <item name="android:paddingLeft">@dimen/spacing</item>
        <item name="android:paddingRight">@dimen/spacing</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:maxLines">3</item>
        <item name="android:layout_weight">3</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="TextDriverPlaces.from">
        <item name="android:textColor">@color/username5</item>
    </style>

    <style name="TextDriverPlaces.to">
        <item name="android:textColor">@color/username2</item>
    </style>

    <style name="LoginButton" xmlns="http://schemas.android.com/apk/res-auto">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">Connect</item>
        <item name="android:textSize">15sp</item>
        <item name="pb_colorNormal">@color/teal_400</item>
        <item name="pb_colorPressed">@color/teal_300</item>
        <item name="pb_colorComplete">@color/green_900</item>
        <item name="pb_textComplete">success</item>
        <item name="pb_textProgress">@string/waitprocess</item>
        <item name="pb_textError">@string/errorloading</item>
        <item name="pb_colorError">@color/red_200</item>
        <!--<item name="pb_disabled">@color/dark</item>-->
        <item name="android:layout_marginLeft">@dimen/marginp</item>
        <item name="android:layout_marginRight">@dimen/marginp</item>
        <item name="android:layout_marginTop">@dimen/marginp</item>
    </style>


</resources>
